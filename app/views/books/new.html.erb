  <div class="row-lg-8 main-top">
    <div class="col-sm-12 col-md-12 col-lg-8 mx-auto p-5 text-center">
      <div class="row">
        <div class="book-deta">
          <%= link_to (image_tag(@book.large_image_url)), @book.item_url %></br>
          <br><%= @book.title%>
          <br><%= @book.author %>
          <%= form_with model_name: @book, url: books_path, method: :post do |f| %>
            <div class="form-group">
              <td><%= f.label :is_read, "読書状態" %></td>
              <td>
                <%= f.radio_button :is_read, :true %>
                <%= f.label :is_read, "読み終わった", value: :true %>
                <%= f.radio_button :is_read, :false, checked: true%>
                <%= f.label :is_read, "読んでない", value: :false %>
              </td>
            </div>
            <%= f.hidden_field :isbn, :value => @book.isbn %>
            <%= f.submit '登録', class: "btn btn-outline-success my-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>