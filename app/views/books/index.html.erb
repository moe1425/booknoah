  <div class="row-lg-8 main-top">
    <div class="col-sm-12 col-md-12 col-lg-8 mx-auto p-5 text-center">
      <div class="row">
        <h3 class="mb-4 fw-bold">本一覧</h3>
        <% @books.each do |book| %>
          <div class="row mb-3 border-bottom p-2 border-opacity-75">
            <div class="col-md-7 mx-auto">
              <div class="row">
                <div class="col-md-6 text-center">
                  <%= link_to (image_tag(book.image_url)), book_path(book) %>
                </div>
                <div class="col-md-6 text-start">
                  <%= link_to book.title, book_path(book) %>
                  <%= book.author %>
                  <div class="pt-3">
                    <% if book.is_read == true %>
                      <h4 class="text-success fw-bold">読み終わった</h4>
                    <% else %>
                      <h4 class="text-muted fw-bold">読んでない</h4>
                    <% end %>
                  </div>
                  <div class="pt-2">
                    <%= link_to '削除', book_path(book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-danger" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>