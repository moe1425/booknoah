  <div class="row-lg-8 main-top">
    <div class="col-sm-12 col-md-12 col-lg-8 mx-auto p-5 text-center">
      <div class="row">
        <div class="book-deta">
          <%= link_to @book_api_data.item_url do %>
            <%= (image_tag(@book.image_url)) %></br>
          <% end %>
          <br><%= @book.title%>
          <br><%= @book.author %>
          <br><% @book.isbn %>
          <% if @book.is_read == false %>
            <h5 class="text-muted font-weight-bold">読んでない</h5>
          <% else %>
            <h5 class="text-success font-weight-bold">読み終わった</h5>
          <% end %>
          <%= link_to "編集する", edit_book_path(id: @book.title, isbn: @book.isbn), class: "btn btn-outline-secondary" %>
          <%= link_to "レビューを投稿する",  new_review_path, class: "btn btn-primary" %></br>
          <br><%= link_to "一覧に戻る", books_path, class: "btn btn-outline-primary" %>
        </div>
        
      </div>
    </div>
  </div>