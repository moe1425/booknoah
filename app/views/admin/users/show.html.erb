  <div class="row-lg-8 main-top">
    <div class="col-sm-12 col-md-12 col-lg-8 mx-auto p-5">
      <div class="row">
        <h3><%= @user.name %>さんのユーザー詳細</h3>
      </div>
      <div class="text-center">
        <table class="table">
          <tr>
            <th>ユーザー画像</th>
            <br><td><%= image_tag @user.get_profile_image(100, 100), class: "profile-img" %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <% if @user.is_deleted == true %>
              <td class="text-secondary font-weight-bold">退会</td>
            <% else %>
              <td class="text-success font-weight-bold">有効</td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <p class="text-center">
      <%= link_to "編集する", edit_admin_user_path(@user.id), class: 'btn btn-outline-secondary btn-sm m-3' %>
    </p>
  </div>