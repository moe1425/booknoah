  <div class="row-lg-8 main-top">
    <div class="col-sm-12 col-md-12 col-lg-8 mx-auto p-5">
      <div class="row">
        <h3><%= @user.name %>さんのユーザー情報編集</h3>
      </div>
      <div class="text">
        <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
          <div class="form_group">
            <br><%= f.label :プロフィール画像 %>
            <br><%= f.file_field :profile_image, accept: "image/*", class: "form-control"  %>
          </div>
          <div class="form_group">
            <br><%= f.label :ユーザー名 %>
            <br><%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form_group">
            <br><%= f.label :メールアドレス %>
            <br><%= f.text_area :email, class: "form-control" %>
          </div>
          <div class="form_group">
            <br><%= f.label :自己紹介 %>
            <br><%= f.text_area :introduction, class: "form-control" %>
          </div>
          <div class="form_group">
          <br><%= f.submit "編集を更新", class: "btn btn-outline-primary rounded-pill" %>
        <% end %>
      </div>
    </div>
  </div>