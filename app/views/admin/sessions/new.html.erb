  <div class="col-sm-12 col-md-12 col-lg-8 mx-auto p-5  main-top">
    <div class="col-sm-10 col-md-8 col-lg-7 mx-auto m-3 p-5 login-form border-box">
      <div class="row">
        <h2>管理者ログイン</h2>
        
        <%= form_with model: @admin, url: admin_session_path do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control my-5" %>
          </div>
          
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control my-5" %>
          </div>
          
          <div class="actions text-center">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
