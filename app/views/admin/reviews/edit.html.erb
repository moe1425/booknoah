  <div class="row-lg-8 main-top">
    <div class="col-sm-12 col-md-12 col-lg-8 mx-auto p-5">
      <div class="row">
        <h3><%= @review.user.name %>さんのレビュー編集</h3>
      </div>
      <div class="text">
        <%= form_with model: @review, url: admin_review_path(@review.id), method: :patch do |f| %>
          <div class="form_group">
            <br><%= f.label :レビュータイトル %>
            <br><%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form_group">
            <br><%= f.label :レビュー内容 %>
            <br><%= f.text_field :content, class: "form-control" %>
          </div>
          <div class="form-group">
            <br><%= f.label :star, '評価 ', class: 'col-md-3 col-form-label' %>
            <div id="star"></div>
          </div>
          <script>
            $('#star').empty();
            $('#star').raty({
              size    : 36,
              starOff: '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              scoreName: 'review[star]',　
              half: false,
            });
          </script>
          <div class="form_group">
          <br><%= f.submit "編集を更新", class: "btn btn-outline-primary rounded-pill" %>
        <% end %>
        <%= link_to "削除", admin_review_path(@review.id),  method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-danger rounded-pill" %>
      </div>
    </div>
  </div>