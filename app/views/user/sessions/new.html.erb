  <div class="col-sm-12 col-md-12 col-lg-8 mx-auto p-5  main-top">
    <div class="col-sm-10 col-md-8 col-lg-7 mx-auto m-3 p-5 login-form border-box">
      <div class="row">
        <h2>ログイン</h2>
      </div>
      
      <div>
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="form_group">
            <br><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", autocomplete: "email", placeholder: "メールアドレス" %></br>
          </div>
          
          <div class="form_group">
            <br><%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード(6文字以上)" %>
          </div>
          
          <% if devise_mapping.rememberable? %>
            <div class="form_group">
              <%= f.check_box :remember_me %>
              <%= f.label :パスワードを保存する %>
            </div>
          <% end %>
         
          <div class="actions text-center">
            <br><%= f.submit "ログイン", class: "btn btn-secondary rounded-pill" %>
          </div>
        <% end %>
        
        <div class="my-3">
          新規登録は<%= link_to "こちら", new_user_registration_path %>から
        </div>
      </div>
    </div>
  </div>