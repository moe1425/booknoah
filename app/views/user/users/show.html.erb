  <div class="row-lg-8 main-top">
    <div class="col-sm-12 col-md-12 col-lg-8 mx-auto p-5">
      <div class="row">
        <h3 class=" fw-bold">マイページ</h3>
      </div>
      <div class="row py-4">
        <div class="col-12 col-md-6 col-xl-5 text-center">
          <br><%= image_tag @user.get_profile_image(200, 200) %>
        </div>
        <div class="col-12 col-md-6 col-xl-7">
          <table class="table">
            <tbody>
              <tr>
                <th>ユーザ名</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>自己紹介</th>
                <th><%= @user.introduction %></th>
              </tr>
              <tr>
                <th>登録した本</th>
                <th><%= @books.count %>冊</th>
              </tr>
              <tr>
                <th>読んだ本</th>
                <th></th>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="text-center">
          <div class="edit-btn">
           <% if @user.id == current_user.id && @user.name != "ゲストユーザー" %>
            <br><%= link_to "プロフィールを編集", information_edit_path(@user), class: "btn btn-outline-secondary my-3 col-lg-6" %>
          <% end %>
          </div>
          <%= link_to "本一覧", books_path, class: "btn btn-light btnx-orange-light" %>
          <%= link_to "レビュー一覧", reviews_path, class: "btn btn-light btnx-orange-light" %>
        </div>
      </div>
    </div>
  </div>