  <div class="row-lg-8 main-top">
    <div class="col-sm-12 col-md-12 col-lg-8 mx-auto p-5">
      <div class="row">
        <h3>マイページ</h3>
      </div>
      <div class="row py-4">
        <div class="col-12 col-md-6 col-xl-5 text-center">
          <br><%= image_tag @user.get_profile_image(200, 200) %>
        </div>
        <div class="col-12 col-md-6 col-xl-7">
          <table class="table">
            <tbody>
              <tr>
                <th>ユーザ名</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>自己紹介</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="text-center">
          <div class="edit-btn">
            <br><%= link_to "プロフィールを編集", information_edit_path(@user), class: "btn btn-outline-secondary my-3 col-lg-9" %>
          </div>
        </div> 
      </div>
    </div>
  </div>