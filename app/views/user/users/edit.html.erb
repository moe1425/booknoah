<h2>プロフィール編集</h2>
  <%= form_with model: @user, url: information_path, method: :patch do |f| %>
        <div class="form_group">
          <%= f.label :ユーザー名 %>
          <br><%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form_group">
          <br><%= f.label :プロフィール画像 %>
          <br><%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form_group">
          <br><%= f.label :自己紹介 %>
          <br><%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form_group">
          <br><%= f.submit "編集を更新", class: "btn btn-secondary" %>
          <%= link_to "戻る", :back, class: "btn btn-secondary" %>
        </div>
      <% end %>